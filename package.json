{
  "name": "stat-js",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "type": "module",
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "start": "node ./build/backend/index.js",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "build: shared": "npm run build -w shared",
    "build": "npm run build --workspaces --if-present",
    "postbuild": "sh ./postbuild.sh",
    "lint:editorconfig": "editorconfig-checker",
    "lint:fs": "ls-lint",
    "lint:types": "npm run lint:types --workspaces --if-present",
    "lint:ts": "npm run lint:ts --workspaces --if-present -- --max-warnings=0",
    "lint": "npm run lint:editorconfig && npm run lint:fs && npm run format && npm run lint:types && npm run lint:ts",
    "format": "prettier --check \"**/*.{ts,tsx,json,md,html}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@ls-lint/ls-lint": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@vitest/coverage-v8": "^0.34.3",
    "concurrently": "^8.2.1",
    "editorconfig-checker": "^5.1.1",
    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.20.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit ${1}"
  }
}
