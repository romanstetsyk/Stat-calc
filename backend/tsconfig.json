{
  "extends": "../tsconfig.json",
  "include": ["src", "test", "vitest.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@shared/*": ["../shared/*"],
      "#/test/*": ["./test/*"]
    },
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noEmit": true
  }
}
