{
  "extends": "../tsconfig.json",
  "include": ["src", "vitest.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "build"
  }
}
